#!name=Douban No Splash
#!desc=去除豆瓣开屏广告（拦截 splash 接口并返回空广告）
#!author=ChatGPT

[Rule]
# 仅处理开屏广告接口。需要开启 MITM 才能匹配到 path。

[Script]
# 把下面 script-path 换成你自己托管的 Douban_NoSplash.js 的 raw 链接（GitHub / Gitee / 自建服务器皆可）
http-response ^https?:\/\/api\.douban\.com\/v2\/app_ads\/splash_(preload|show|bid|statistics) script-path=https://github.com/BsB530812/Plugins/blob/main/Douban/Douban_NoSplash.js requires-body=true timeout=10 tag=Douban_Splash_Killer

# 可选：如果你想顺便清掉首页 banner（可能存在副作用），取消下一行注释并加入 MITM 的 frodo.douban.com
# http-response ^https?:\/\/frodo\.douban\.com\/api\/v2\/home_banner script-path=https://example.com/Douban_NoSplash.js requires-body=true timeout=10 tag=Douban_Home_Banner_Clean

[MITM]
hostname = api.douban.com
# 如果启用 home_banner 规则：hostname = api.douban.com, frodo.douban.com
